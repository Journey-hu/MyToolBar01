<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/fragment"
    tools:context="com.github.lmydev.mytoolbar01.ToolbarFragActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        >

        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/tl_2"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            tl:tl_divider_color="#1A000000"
            tl:tl_divider_padding="13dp"
            tl:tl_divider_width="1dp"
            tl:tl_indicator_color="#436EEE"
            tl:tl_indicator_height="1.5dp"
            tl:tl_indicator_width_equal_title="true"
            tl:tl_tab_padding="22dp"
            tl:tl_tab_space_equal="true"
            tl:tl_textSelectColor="#436EEE"
            tl:tl_textUnselectColor="#66000000"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="122dp"/>
        <!--tl:tl_underline_height="2dp"-->

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="11dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            tl:srcCompat="@drawable/back"/>


    </RelativeLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
